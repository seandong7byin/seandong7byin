{
  "name": "tenugui-backend",
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "start": "dotenv nodemon src/index.js",
    "prod": "dotenv node src/index.js",
    "setup-env": "node -e \"(fs => fs.existsSync('.env') || fs.copyFileSync('.env.example', '.env'))(require('fs'))\"",
    "lint": "eslint src/",
    "test": "dotenv -e .env.testing -- jest --runInBand",
    "apidoc": "apidoc -i src/ -o doc/"
  },
  "apidoc": {
    "name": "TenuGUI",
    "title": "ApiDoc | TenuGUI",
    "url": "/api",
    "sampleUrl": "http://localhost:4000/api"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv-cli": "^1.4.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "helmet": "^3.15.1",
    "moment": "^2.24.0",
    "mysql2": "^1.6.5",
    "sequelize": "^4.42.0",
    "serve-static": "^1.13.2",
    "socket.io": "^2.2.0",
    "socket.io-json-parser": "^2.1.0",
    "umzug": "^2.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.9",
    "@types/sequelize": "^4.27.37",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "^2.0.7",
    "@types/umzug": "^2.2.0",
    "apidoc": "^0.17.7",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "rewire": "^4.0.1",
    "sequelize-cli": "^5.4.0",
    "sinon": "^7.2.4",
    "supertest": "^3.4.2"
